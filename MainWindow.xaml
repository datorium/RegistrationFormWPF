<Window x:Class="RegistrationFormWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationFormWPF"
        mc:Ignorable="d"
        Title="Mobile app prototype" Height="600" Width="400">
    <Grid>
        <TextBox x:Name="EmailField" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="24"/>
        <PasswordBox x:Name="PasswordField" HorizontalAlignment="Center" Margin="0,101,0,0" VerticalAlignment="Top" Width="320" FontSize="24"/>
        <PasswordBox x:Name="PasswordRepeatField" HorizontalAlignment="Center" Margin="0,155,0,0" VerticalAlignment="Top" Width="320" FontSize="24"/>
        <Button x:Name="SignUpButton" Content="Sign up" HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Height="40" Width="140" Background="#FFFF6E00" Foreground="White" FontSize="18" Click="SignUpButton_Click"/>
        <ListBox x:Name="UserList" Margin="0,270,0,0" Background="#FF39CAC7"/>

    </Grid>
</Window>
